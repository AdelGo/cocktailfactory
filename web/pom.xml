	<parent>
		<groupId>com.cocktail</groupId>
		<artifactId>cocktailfactory</artifactId>
		<version>0.0.1-SNAPSHOT</version>
	</parent>

	<groupId>com.cocktail.web</groupId>
	<artifactId>web</artifactId>
	<packaging>war</packaging>

	<name>web</name>
	<description>Cocktail factory web module</description>

